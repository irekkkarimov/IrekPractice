<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFC8DD">

    <TextView
        android:id="@+id/mainHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calories Calculator"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/button"
        android:layout_width="195dp"
        android:layout_height="78dp"
        android:text="Submit"
        android:textSize="25dp"
        android:backgroundTint="#023e8a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/border"
        app:layout_constraintVertical_bias="0.776" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="263dp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="218dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="4dp"
        android:background="#FFAFCC"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameHeading"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/heightInput"
        android:layout_width="218dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="4dp"
        android:background="#FFAFCC"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightHeading"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="218dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="4dp"
        android:background="#FFAFCC"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightHeading"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="218dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="4dp"
        android:background="#FFAFCC"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageHeading"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nameHeading"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:background="@null"
        android:text="Name:"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.244" />

    <TextView
        android:id="@+id/heightHeading"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Height:"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInput"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ageHeading"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Age:"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightInput"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/weightHeading"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Weight:"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightInput"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Result: "
        android:textAlignment="center"
        android:textSize="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/border"
        app:layout_constraintVertical_bias="0.684" />


</androidx.constraintlayout.widget.ConstraintLayout>